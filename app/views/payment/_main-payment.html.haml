.payment-main
  %section.payment-container
    %h2 クレジットカード情報入力
  %form.payment-text
    .payment-text__box
      .payment-text__contents
        %label カード番号
        %span 必須
        %textarea.textarea-default{name: "introduction",placeholder: "例）フリマ太郎"}
        %ul.card
          %li=image_tag "image-visa.png",size: "49x20" 
          %li=image_tag "image-mastercard.png",size: "34x20" 
          %li=image_tag "image-SAISON.png",size: "30x20" 
          %li=image_tag "image-JCB.png",size: "32x20" 
          %li=image_tag "image-AMERICAN.png",size: "21x20" 
          %li=image_tag "image-Diners.png",size: "32x20"
          %li=image_tag "image-DISCOVER.png",size: "32x20"  
      .payment-expiration-date
        %label 有効期限
        %span.required 必須
        .expiration-date
          .select-month
            %select{name:"month"}
              %option{value:""} --
              %option{value:"1"} 1
              %option{value:"2"} 2
              %option{value:"3"} 3
              %option{value:"4"} 4
              %option{value:"5"} 5
              %option{value:"6"} 6
              %option{value:"7"} 7
              %option{value:"8"} 8
              %option{value:"9"} 9
              %option{value:"10"} 10
              %option{value:"11"} 11
              %option{value:"12"} 12
            %span 月
          .select-year
            %select.select-default{name:"year"}
              %option{value:""} --
              %option{value:"20"} 20
              %option{value:"21"} 21
              %option{value:"22"} 22
              %option{value:"23"} 23
              %option{value:"24"} 24
              %option{value:"25"} 25
              %option{value:"26"} 26
              %option{value:"27"} 27
              %option{value:"28"} 28
              %option{value:"29"} 29
              %option{value:"30"} 30
            %span 年
      .payment-text__contents
        %label セキュリティコード
        %span 必須
        %textarea.textarea-default{name: "introduction",placeholder: "カード裏面4桁もしくは3桁の番号"}
      .payment-text__numver
        .text
          = icon('fas','question-circle')
          %span カード裏面の番号とは？
      %button.default{type:"submit"} 次へ進む
.registration-screen
  .header-address
    %h1 
      =image_tag "fmarket_logo.png",size: '125x36',alt:"fmarket"
    %nav.registration-box
      %ul.registration-procedure
        %li.information-user
          会員情報
          .information-progress-status
            .information-progress-status__bar
        %li.phone
          電話番号認証
          .phone-progress-status
          .phone-progress-status__bar
        %li.address
          住所入力
          .address-progress-status
            .address-progress-status__bar
        %li.payment
          支払い方法
          .payment-progress-status
          .payment-progress-status__bar
        %li.complete
          完了
          .complete-progress-status
          .complete-progress-status__bar
  .address-box
    .address-main
      %section.address-container
        %h2 住所入力
      .address-text
      = form_for(@address, url: step4_registrations_path, method: :get) do |f|
        .address-text__box
          .address-text__contents
            %label お名前
            %span 必須
            = f.text_field :family_name, placeholder: '例) 神田'
            = f.text_field :first_name, placeholder: '例) 綾'
          .address-text__contents
            %label お名前（カナ）
            %span 必須
            = f.text_field :family_name_kana, placeholder: '例) カンダ'
            = f.text_field :first_name_kana, placeholder: '例) アヤ'
          .address-text__contents
            %label 郵便番号
            %span 必須
            = f.text_field :postal_code, placeholder: '例) 123-4567'
          .address-text__contents
            %label 都道府県
            %span 必須
            %input{list:"list", type:"search"}/
            %datalist#list
              %option --
              %option 北海道      
              %option 青森県
              %option 岩手県
              %option 宮城県
              %option 秋田県
              %option 山形県
              %option 福島県
              %option 東京都
              %option 神奈川県
              %option 埼玉県
              %option 千葉県
              %option 茨城県
              %option 栃木県
              %option 群馬県
              %option 山梨県
              %option 新潟県
              %option 長野県
              %option 富山県
              %option 石川県
              %option 福井県
              %option 愛知県
              %option 岐阜県
              %option 静岡県
              %option 三重県
              %option 大阪府
              %option 兵庫県
              %option 京都府
              %option 滋賀県
              %option 奈良県
              %option 和歌山県
              %option 鳥取県
              %option 島根県
              %option 岡山県
              %option 広島県
              %option 山口県
              %option 徳島県
              %option 香川県
              %option 愛媛県
              %option 高知県
              %option 福岡県
              %option 佐賀県
              %option 長崎県
              %option 熊本県
              %option 大分県
              %option 宮崎県
              %option 鹿児島県
              %option 沖縄県
          .address-text__contents
            %label 市区町村
            %span 必須
            = f.text_field :municipalities, placeholder: '例) 横浜市緑区'
          .address-text__contents
            .form
            %label 番地
            %span 必須
            = f.text_field :house_number, placeholder: '例) 青山1-1-1'
          .address-text__contents
            %label 建物名
            %span 必須
            = f.text_field :building_name, placeholder: '例) 柳ビル103'
          .address-text__contents
            %label 電話
            %span 必須
            = f.text_field :house_phone_number, placeholder: '例) 09012345678'
          = f.submit "次へ進む", class: 'btn btn-warning'
  .footer-registration-box 
    %ul.footer-registration-box-content
      %li.footer-registration-box-content__list
        %a プライバシーポリシー
      %li.footer-registration-box-content__list
        %a メルカリ利用規約
      %li.footer-registration-box-content__list
        %a 特定商取引に関する表記
    .footer-registration-box-content__icon
      =image_tag "fmarket_logo_white.png",alt:"fmarket"